sprite testsprt
{
	.layer = 0;
	.center = [[0,0]];
	.gfx = {img 'test.png'};
}

actor testactor
{
	.sprt = testsprt;
	.pos = [0,0];
	.state = 'left';
}

actor testactor1
{
	.sprt = testsprt;
	.pos = [40,0];
}


game main
{

	.active_actors = [testactor, testactor1];
	.active_tmaps = [labyrinth2];
	
	.cam_actor = 0;
	
	body
	{
		testactor.key_move(1);
		
		r0 = key('space');
		if r0
		{
			r0=cmp_equal(.cam_actor, 0);
			if r0
			{
				testactor.cam_focus();
			}
			else
			{
				testactor.cam_focus = set(0);
			}
				
		}
		
		
		r0 = key('esc');
		if r0 term();
		
		next_frame();
	}
}

