

sprite testsprt
{
	.layer = 0;
	.center = [[0,0]];
	.gfx = {img 'test.png'};
}

actor testactor
{
	.sprt = testsprt;
	.pos = [0,0];
	.state = 'left';
}

actor testactor1
{
	.sprt = testsprt;
	.pos = [40,0];
}


game main
{

	.active_actors = [testactor, testactor1];
	
	
	
	body
	{
		testactor.key_move(2);
		
		r0 = key('esc');
		if r0 term();
		
		next_frame();
	}
}

